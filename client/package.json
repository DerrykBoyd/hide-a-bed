{
  "name": "@brivity/hide-a-bed",
  "version": "7.0.0-test.7",
  "description": "An abstraction over couchdb calls that includes easy mock/stubs with pouchdb",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./types/output/index.d.mts",
  "exports": {
    "default": "./dist/cjs/index.cjs",
    "types": "./types/output/index.d.mts",
    "require": {
      "types": "./types/output/index.d.mts",
      "default": "./dist/cjs/index.cjs"
    },
    "import": {
      "types": "./types/output/index.d.mts",
      "default": "./dist/esm/index.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf types/output && rm -rf dist && (find . -name \"log.txt\" -type f -delete || true)",
    "build": "npm run clean && tsc && tsdown",
    "build:docs": "typedoc ./index.mts",
    "test": "node --test",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "prepublishOnly": "npm run build",
    "full": "npm run lint:fix && npm run build && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanramage/hide-a-bed.git"
  },
  "keywords": [
    "couchdb",
    "test"
  ],
  "author": "ryan ramage",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ryanramage/hide-a-bed/issues"
  },
  "homepage": "https://github.com/ryanramage/hide-a-bed#readme",
  "dependencies": {
    "needle": "3.3.1",
    "stream-json": "1.9.1"
  },
  "devDependencies": {
    "@types/needle": "3.3.0",
    "@types/stream-json": "1.7.8",
    "pouchdb-server": "4.2.0",
    "standard": "17.1.0",
    "tsdown": "0.18.1",
    "typedoc": "0.28.15",
    "typescript": "5.9.3",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "publishConfig": {
    "registry": "http://npm.rmcloud.com:8123"
  },
  "volta": {
    "node": "22.21.1",
    "npm": "10.8.2"
  }
}

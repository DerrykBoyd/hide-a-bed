{
  "exclude": ["node_modules", "dist", "types/output"],
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "esnext",
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "allowJs": true,
    // "checkJs": true, // TODO: enable later
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "types/output"
  }
}

{
  "exclude": ["node_modules", "cjs", "types/output"],
  "compilerOptions": {
    "module": "Node16",
    "target": "es2020",
    "verbatimModuleSyntax": true,
    "strict": true,
    "allowJs": true,
    // "checkJs": true, // TODO: enable later
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "types/output"
  }
}
